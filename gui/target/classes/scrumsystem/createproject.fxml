<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="432.0" prefWidth="540.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scrumsystem.CreateProjectController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
   <children>
      <TextField fx:id="titleBox" maxWidth="400.0" minWidth="0.0" prefHeight="46.0" prefWidth="100.0" text="" />
      <ChoiceBox fx:id="categoryBox" prefHeight="46.0" prefWidth="400.0" />
      <HBox prefHeight="17.0" prefWidth="500.0">
         <children>
            <Button mnemonicParsing="false" onAction="#backToDashboard" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#createProject" text="Create!" />
         </children>
      </HBox>
   </children>

</VBox>
